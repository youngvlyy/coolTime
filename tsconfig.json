{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "./server",
    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,

    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    "isolatedModules": true,

    "verbatimModuleSyntax": false
  },
  "include": ["server"]
}
